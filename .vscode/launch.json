{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Jest Tests",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "test"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"],
        "sourceMaps": true,
        "env": {
          "NODE_ENV": "test"
        },
        "outFiles": ["${workspaceFolder}/dist/**/*.js"]
      }
    ]
  }